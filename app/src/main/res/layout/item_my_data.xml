<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/img_find_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:src="@mipmap/card_image_1"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/content_my_data"
                android:text="大家要好好保护水曲柳呀,保护水曲柳保护水曲柳呀保护水曲柳呀好保护水曲柳呀,保护水曲柳呀。大家要好好保护水曲柳呀,保护水曲柳呀。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="12dp" />
            <RelativeLayout
                android:id="@+id/line_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.example.kys_8.easyforest.weight.CircleImageView
                    android:id="@+id/avatar_find_item"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:border_width="2dp"
                    app:border_color="@color/transparent_20"
                    android:src="@mipmap/avatar_off"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/star_find"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_star_grey"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/avatar_find_item"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/collect_find_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star_find"
                    android:text="239"
                    android:textSize="9dp" />
                <TextView
                    android:id="@+id/time_my_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2018/09/20 11:01"
                    android:textColor="@color/date_color"
                    android:textSize="9dp"

                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/gray_light"/>-->


</android.support.v7.widget.CardView>
