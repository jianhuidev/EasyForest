<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="260dp"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_hori"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/card_image_1"
            android:transitionName="tree"/>
        <TextView
            android:id="@+id/tv_number_hori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_rounded_rect"
            android:text="1/9"
            android:textSize="12sp"
            android:textColor="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_rect">
            <TextView
                android:id="@+id/name_hori"
                android:text="作法观音莲"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/cardview_light_background"/>

            <TextView
                android:id="@+id/bhjb_hori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/latin_hori"
                android:layout_toEndOf="@+id/name_hori"
                android:layout_toRightOf="@+id/name_hori"
                android:text="保护级别"
                android:textColor="@color/cardview_light_background" />
            <TextView
                android:id="@+id/latin_hori"
                android:text="Latin Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:layout_marginBottom="12dp"
                android:layout_below="@+id/name_hori"
                android:textColor="@color/cardview_light_background"/>
        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>