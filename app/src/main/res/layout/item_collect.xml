<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/img_collect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="9dp"
                    android:src="@mipmap/card_image_1"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp">

                <TextView
                    android:id="@+id/content_collect"
                    android:text="大家要好好保护水曲柳呀,保护水曲柳保护水曲柳呀保护水曲柳呀好保护水曲柳呀,保护水曲柳呀。大家要好好保护水曲柳呀,保护水曲柳呀。"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textSize="12dp" />
                <RelativeLayout
                    android:id="@+id/line_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.example.kys_8.easyforest.weight.CircleImageView
                        android:id="@+id/avatar_collect"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:border_width="2dp"
                        app:border_color="@color/colorAccent"
                        android:src="@mipmap/avatar_off"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/star_find"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_outline"
                        android:layout_marginRight="2dp"
                        android:layout_toRightOf="@+id/avatar_collect"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/collect_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/star_find"
                        android:text="239"
                        android:textSize="9dp" />
                    <TextView
                        android:id="@+id/time_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="2018/09/20 11:01"
                        android:textColor="@color/date_color"
                        android:textSize="9sp"

                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
