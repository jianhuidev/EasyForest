<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_find"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_find_item"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:src="@mipmap/card_image_1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/line_my_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                >

                <com.example.kys_8.easyforest.weight.CircleImageView
                    android:id="@+id/avatar_find_item"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:border_width="2dp"
                    app:border_color="@color/transparent_20"
                    android:src="@mipmap/avatar_off"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/name_my_data"
                    android:text="小明哈"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/date_color"/>

            </LinearLayout>
            <TextView
                android:id="@+id/content_my_data"
                android:text="大家要好好保护水曲柳呀,保护水曲柳呀。大家要好好保护水曲柳呀,保护水曲柳呀。大家要好好保护水曲柳呀,保护水曲柳呀。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_star_grey"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>
                    <TextView
                        android:id="@+id/collect_find_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="239"
                        android:textSize="9dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_my_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="2018/09/20 11:01"
                    android:textColor="@color/date_color"
                    android:textSize="9dp" />

            </RelativeLayout>
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--&gt;-->
            <!--<CheckBox-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"/>-->
        <!--</LinearLayout>-->
    </LinearLayout>
</android.support.v7.widget.CardView>